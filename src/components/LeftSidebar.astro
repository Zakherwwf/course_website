---
import Search from './Search.jsx';

// Updated navigation data with Chapter 6
const navigation = [
  {
    section: "Course Info",
    items: [
      { title: "Supporting Materials", url: "/course_website/resources/" },
    ]
  },
  {
    section: "Course Content",
    items: [
      { title: "Chapter 1: Global Principles", url: "/course_website/" },
      { title: "Chapter 2: Regional Context", url: "/course_website/chapter2/" },
      { title: "Chapter 3: Tunisian Ecosystems", url: "/course_website/chapter3/" },
      { title: "Chapter 4: Biodiversity & Services", url: "/course_website/chapter4/" },
      { title: "Chapter 5: Threats & Challenges", url: "/course_website/chapter5/" },
      { title: "Chapter 6: Management & Restoration", url: "/course_website/chapter6/" },
    ]
  },
  {
    section: "Assessments",
    items: [
      { title: "Chapter 1 Quiz", url: "/course_website/quiz1/", completed: true },
    ]
  }
];

const currentPath = Astro.url.pathname;
---

<aside class="sidebar" id="sidebar">
    <!-- Toggle Button -->
    <button class="sidebar-toggle" id="sidebarToggle" aria-label="Toggle sidebar">
        <div class="hamburger-line"></div>
        <div class="hamburger-line"></div>
        <div class="hamburger-line"></div>
    </button>

    <!-- Sidebar Body -->
    <div class="sidebar-body">
        <!-- Logo Section -->
        <div class="logo-section">
            <div class="logo-wrapper">
                <div class="logo-icon"></div>
                <span class="logo-text">Ecosystem Course</span>
            </div>
        </div>

        <!-- Search Section -->
        <div class="search-section">
            <Search client:load />
        </div>

        <!-- Navigation -->
        <nav class="navigation">
            {navigation.map(group => (
                <div class="nav-section">
                    <div class="section-header">
                        <span class="section-title">{group.section}</span>
                    </div>
                    <div class="nav-links">
                        {group.items.map(item => {
                            // Active state logic
                            let isActive = currentPath === item.url;
                            if (item.url === '/course_website/') {
                                if (currentPath === '/course_website/' || currentPath === '/course_website/index.html') {
                                    isActive = true;
                                } else {
                                    isActive = false;
                                }
                            }

                            return (
                                <a href={item.url} class:list={["nav-link", { active: isActive }]}>
                                    <span class="link-text">{item.title}</span>
                                    {item.completed && (
                                        <div class="completion-dot"></div>
                                    )}
                                </a>
                            );
                        })}
                    </div>
                </div>
            ))}
        </nav>

        <!-- Footer -->
        <div class="sidebar-footer">
            <a href="/course_website/about-wwf/" class="footer-link">
                <span class="footer-text">About WWF</span>
            </a>
        </div>
    </div>
</aside>

<style>
    .sidebar {
        position: sticky;
        top: 60px;
        height: calc(100vh - 60px);
        width: 280px;
        background: var(--color-bg);
        border-right: 1px solid var(--color-border);
        display: flex;
        flex-direction: column;
        transition: width 0.3s ease;
        z-index: 100;
        overflow: hidden;
    }

    .sidebar.collapsed {
        width: 80px;
    }

    @media (max-width: 767px) {
        .sidebar {
            position: fixed;
            left: 0;
            top: 60px;
            width: 280px;
            transform: translateX(-100%);
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }

        .sidebar.open {
            transform: translateX(0);
        }
    }

    .sidebar-toggle {
        display: none;
        position: fixed;
        top: 70px;
        left: 15px;
        z-index: 101;
        background: var(--color-bg);
        border: 1px solid var(--color-border);
        border-radius: 8px;
        padding: 12px;
        cursor: pointer;
        width: 44px;
        height: 44px;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 4px;
        transition: all 0.2s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .hamburger-line {
        width: 18px;
        height: 2px;
        background: var(--color-text);
        border-radius: 1px;
        transition: all 0.3s ease;
    }

    .sidebar-toggle:hover {
        background: var(--color-bg-alt);
    }

    .sidebar-toggle:hover .hamburger-line {
        background: var(--color-primary);
    }

    @media (max-width: 767px) {
        .sidebar-toggle {
            display: flex;
        }
    }

    .sidebar-body {
        display: flex;
        flex-direction: column;
        height: 100%;
        padding: 0;
        overflow: hidden;
    }

    .logo-section {
        padding: 24px 20px 16px 20px;
        border-bottom: 1px solid var(--color-border);
    }

    .logo-wrapper {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .logo-icon {
        width: 32px;
        height: 32px;
        background: var(--color-primary);
        border-radius: 8px;
        flex-shrink: 0;
        position: relative;
    }

    .logo-icon::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 16px;
        height: 16px;
        background: white;
        border-radius: 3px;
    }

    .logo-text {
        font-family: var(--font-sans);
        font-weight: 600;
        font-size: 16px;
        color: var(--color-text);
        white-space: nowrap;
        opacity: 1;
        transition: opacity 0.3s ease;
    }

    .sidebar.collapsed .logo-text {
        opacity: 0;
        pointer-events: none;
    }

    .search-section {
        padding: 16px 20px;
        border-bottom: 1px solid var(--color-border);
        opacity: 1;
        transition: opacity 0.3s ease;
    }

    .sidebar.collapsed .search-section {
        opacity: 0;
        pointer-events: none;
    }

    .navigation {
        flex: 1;
        overflow-y: auto;
        padding: 20px 0;
    }

    .nav-section {
        margin-bottom: 32px;
    }

    .nav-section:last-child {
        margin-bottom: 0;
    }

    .section-header {
        padding: 0 20px 12px 20px;
        opacity: 1;
        transition: opacity 0.3s ease;
    }

    .sidebar.collapsed .section-header {
        opacity: 0;
    }

    .section-title {
        font-family: var(--font-sans);
        font-size: 12px;
        font-weight: 600;
        color: var(--color-text-muted);
        text-transform: uppercase;
        letter-spacing: 0.8px;
    }

    .nav-links {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .nav-link {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 12px 20px;
        color: var(--color-text);
        text-decoration: none;
        font-family: var(--font-sans);
        font-size: 14px;
        font-weight: 500;
        transition: all 0.2s ease;
        position: relative;
        border-radius: 0;
    }

    .nav-link::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 3px;
        background: transparent;
        transition: background 0.2s ease;
    }

    .nav-link:hover {
        background: var(--color-bg-alt);
        color: var(--color-text);
    }

    .nav-link.active {
        background: var(--color-bg-alt);
        color: var(--color-primary);
        font-weight: 600;
    }

    .nav-link.active::before {
        background: var(--color-primary);
    }

    .link-text {
        flex: 1;
        white-space: nowrap;
        opacity: 1;
        transition: opacity 0.3s ease;
    }

    .sidebar.collapsed .link-text {
        opacity: 0;
    }

    .completion-dot {
        width: 8px;
        height: 8px;
        background: #10b981;
        border-radius: 50%;
        flex-shrink: 0;
        opacity: 1;
        transition: opacity 0.3s ease;
    }

    .sidebar.collapsed .completion-dot {
        opacity: 0;
    }

    .sidebar-footer {
        padding: 20px;
        border-top: 1px solid var(--color-border);
        opacity: 1;
        transition: opacity 0.3s ease;
    }

    .sidebar.collapsed .sidebar-footer {
        opacity: 0;
        pointer-events: none;
    }

    .footer-link {
        display: flex;
        align-items: center;
        padding: 12px 0;
        color: var(--color-text-muted);
        text-decoration: none;
        font-family: var(--font-sans);
        font-size: 14px;
        font-weight: 500;
        transition: color 0.2s ease;
    }

    .footer-link:hover {
        color: var(--color-primary);
    }

    .footer-text {
        white-space: nowrap;
    }

    .sidebar-overlay {
        display: none;
        position: fixed;
        top: 60px;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 99;
    }

    @media (max-width: 767px) {
        .sidebar-overlay.open {
            display: block;
        }
    }

    /* Desktop collapse toggle */
    @media (min-width: 768px) {
        .sidebar-toggle {
            display: flex;
            position: absolute;
            top: 20px;
            right: -22px;
            background: var(--color-bg);
            border: 1px solid var(--color-border);
            border-radius: 50%;
            width: 44px;
            height: 44px;
            z-index: 102;
        }

        .sidebar.collapsed .sidebar-toggle {
            right: -22px;
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .sidebar,
        .logo-text,
        .search-section,
        .section-header,
        .link-text,
        .completion-dot,
        .sidebar-footer {
            transition: none !important;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const sidebar = document.querySelector('.sidebar');
        const sidebarToggle = document.querySelector('.sidebar-toggle');
        const body = document.body;

        if (!sidebar || !sidebarToggle) return;

        const overlay = document.createElement('div');
        overlay.className = 'sidebar-overlay';
        body.appendChild(overlay);

        function toggleSidebar() {
            // Mobile behavior
            if (window.innerWidth <= 767) {
                const isOpen = sidebar.classList.contains('open');

                if (isOpen) {
                    sidebar.classList.remove('open');
                    overlay.classList.remove('open');
                    body.style.overflow = '';
                } else {
                    sidebar.classList.add('open');
                    overlay.classList.add('open');
                    body.style.overflow = 'hidden';
                }
            } else {
                // Desktop behavior - collapse/expand
                sidebar.classList.toggle('collapsed');
            }
        }

        sidebarToggle.addEventListener('click', toggleSidebar);
        overlay.addEventListener('click', () => {
            if (window.innerWidth <= 767) {
                sidebar.classList.remove('open');
                overlay.classList.remove('open');
                body.style.overflow = '';
            }
        });

        // Close sidebar on navigation (mobile only)
        const navLinks = sidebar.querySelectorAll('.nav-link');
        navLinks.forEach(link => {
            link.addEventListener('click', function() {
                if (window.innerWidth <= 767) {
                    setTimeout(() => {
                        sidebar.classList.remove('open');
                        overlay.classList.remove('open');
                        body.style.overflow = '';
                    }, 150);
                }
            });
        });

        // Handle window resize
        window.addEventListener('resize', function() {
            if (window.innerWidth > 767) {
                sidebar.classList.remove('open');
                overlay.classList.remove('open');
                body.style.overflow = '';
            }
        });

        // Keyboard accessibility
        sidebarToggle.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                toggleSidebar();
            }
        });

        // Close sidebar on Escape key (mobile)
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && sidebar.classList.contains('open') && window.innerWidth <= 767) {
                sidebar.classList.remove('open');
                overlay.classList.remove('open');
                body.style.overflow = '';
            }
        });
    });
</script>